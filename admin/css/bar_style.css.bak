@import url(http://fonts.googleapis.com/css?family=Roboto:400+700);


#numbers {
  height: 100%;
  width: 30px;
  margin: 0;
  padding: 0;
  display: inline-block;
  float: left;
}

#numbers li {
  text-align: right;
  padding-right: 1em;
  list-style: none;
  height: 29px;
  border-bottom: 1px solid #444;
  position: relative;
  bottom: 30px;
}

#numbers li:last-child { height: 30px; }

#numbers li span {
  color: #eee;
  position: absolute;
  bottom: 0;
  right: 10px;
}

#bars {
  display: inline-block;
  width: 100%;
  height: 90px;
  padding: 0;
  margin: 0;
}

#bars li {
  display: table-cell;
  width: 100px;
  height: 100px;
  margin: 0;
  text-align: center;
  position: relative;
}

#bars li .bar {
  display: block;
  width: 20px;
  background: #568A89;
  position: absolute;
  bottom: 0;
}

#bars li .bar:hover {
  background: #A65858;
  cursor: pointer;
}

#bars li .bar:hover:before {
  color: #6E3671;
  content: attr(data-percentage) '%';
  position: relative;
  bottom: 20px;
}

#bars li span {
  color: #000;
  width: 100%;
  position: absolute;
  bottom: -25px;
  left: 0;
  text-align: center;
  font-family:arial;
}
